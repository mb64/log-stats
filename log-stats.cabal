category:            Math
build-type:          Simple
cabal-version:       >=1.10

executable log-stats
  main-is:             Main.hs
  other-modules:       Text,Stats
  -- other-extensions:    
  ghc-options:         -Wall -fllvm -rtsopts -threaded -O2
  build-depends:       base >=4.10 && <4.11, containers
  hs-source-dirs:      src
  default-language:    Haskell2010
